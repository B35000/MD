<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/root"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/creation_time"
                android:layout_width="match_parent"
                android:layout_marginEnd="135dp"
                android:text="Joined: 23 Jan 2020"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/join_time"
                android:layout_width="wrap_content"
                android:text="at 11:35"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/coutry_text"
                android:layout_width="wrap_content"
                android:text="Kenya"
                android:textSize="13sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/deactivate_driver_layout"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/deactivate_switch"
                    android:layout_width="wrap_content"
                    android:text="Deactivate"
                    android:textSize="13sp"
                    android:textColor="@color/text_color"
                    android:enabled="true"
                    android:checked="false"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/role_switch_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/admin_switch"
                    android:layout_width="wrap_content"
                    android:enabled="true"
                    android:textSize="13sp"
                    android:textColor="@color/text_color"
                    android:checked="false"
                    android:text="Administrator"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>