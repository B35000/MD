<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/window_background"
    tools:context=".Fragments.ViewOrganisation">

    <RelativeLayout
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="80dp"
                            android:textSize="21sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"
                            android:text="Killeton Sacco Society" />

                        <RelativeLayout
                            android:id="@+id/join_organisation_layout"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="Change" />


                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="18dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Everything for your organisation is here" />


                    <RelativeLayout
                        android:id="@+id/selected_route_card"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/creation_time"
                                android:layout_width="wrap_content"
                                android:text="Created: 23 Jan 2020"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/source_text"
                                android:layout_width="match_parent"
                                android:layout_marginTop="7dp"
                                android:text="From: Odeon Plaza, Nairobi CBD."
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/destination_text"
                                android:layout_width="match_parent"
                                android:text="To : Othaya Road Lavington, Nairobi."
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Your set route"
                                android:textStyle="bold"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/colorAccent"
                                android:textSize="11sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/see_route_layout"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="@string/View" />


                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="16dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorAccent"
                        android:layout_marginVertical="20dp"
                        android:alpha="0.4"
                        android:layout_height="1dp"/>

                    <RelativeLayout
                        android:id="@+id/view_all_routes_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="View routes." />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"
                                android:text="View all the routes created." />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/view_all_routes_layout_button"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="Continue" />


                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="16dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/view_drivers_layout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="View drivers." />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"
                                android:text="View the drivers in your organisation" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/view_drivers_button"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="@string/View" />


                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="16dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/new_route_layout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="Create Route." />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"
                                android:text="Create a new route you will be using" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/create_route_layout"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="Continue" />


                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="16dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/passcode_layout"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="Generate password" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"
                                android:text="Passwords generated expire in a minute" />

                            <TextView
                                android:id="@+id/new_code"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="3dp"
                                android:visibility="gone"
                                android:textSize="12sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="124 629" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/generate_passcode_layout"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="Generate" />


                                <ImageView
                                    android:layout_width="19dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="16dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"
                            android:text="All routes" />

                        <TextView
                            android:id="@+id/refresh"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="23dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"
                            android:text="Refresh" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_alignParentEnd="true"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/refresh"
                            android:layout_height="20dp"/>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/created_routes_recyclerview"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</FrameLayout>